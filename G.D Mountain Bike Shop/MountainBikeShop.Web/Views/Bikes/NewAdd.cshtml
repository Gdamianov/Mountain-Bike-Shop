@using MountainBikeShop.Web.Models.BindingModels
@model BikeBindingModel

<div class="new-add">
    <h1>New Bike Add</h1>
    <hr />
    
   @using (Html.BeginForm("NewAdd", "Bikes", FormMethod.Post))
   {
       @Html.AntiForgeryToken()
       <div class="form-group">
           
           @Html.LabelFor(m => m.Brand)
           @Html.TextBoxFor(m => m.Brand)
           <h5 class="error-message">@Html.ValidationMessageFor(m => m.Brand)</h5>
       </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Model)
        @Html.TextBoxFor(m => m.Model)
        <h5 class="error-message">@Html.ValidationMessageFor(m => m.Model)</h5>
        
    </div>
    <div>
        @Html.LabelFor(m=>m.Description)
        @Html.TextAreaFor(m => m.Description)
        <h5 class="error-message">@Html.ValidationMessageFor(m => m.Description)</h5>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price)
        <h5 class="error-message">@Html.ValidationMessageFor(m => m.Price)</h5>
    </div>
        <input type="submit" class="btn btn-primary" id="newBikeAdd">
   }
    
    <hr/>
</div> 
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }